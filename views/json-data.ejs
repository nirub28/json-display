<!DOCTYPE html>
<html>
<head>
    <title>JSON Data</title>
    <link rel="stylesheet" href="css/json.css"> 
    <style>
        body {
    font-family: Arial, sans-serif;
    background-color: #f2f2f2;
}

.json-display {
    max-width: 400px;
    margin: 0 auto;
    padding: 20px;
    background-color: gray;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    border-radius: 5px;
}

h1 {
    font-size: 24px;
    margin-bottom: 20px;
    margin-left: 30%;
}

form {
    display: grid;
    gap: 10px;
}

label {
    font-weight: bold;
}

input[type="text"] {
    padding: 8px;
    border: 1.5px solid black;
    border-radius: 5px;
    width: 40%;
\}

p {
    font-style: italic;
    color: #888;
}

.div-json{
    display: flex;
    justify-content: space-around;
    flex-direction: row;
}
    </style>
</head>
<body>
    <div class="json-display">
        <% if (jsonData) { %>
            <h1>JSON Data:</h1>
            <form>
                <% for (const key in jsonData) { %>
                    <div class="div-json">
                    <label for="<%= key %>"><%= key %></label>
                    <input type="text" id="<%= key %>" name="<%= key %>" value="<%= jsonData[key] %>"><br>
                    </div>
                    <% } %>
            </form>
        <% } else { %>
            <p>No JSON data available.</p>
        <% } %>
    </div>
</body>
</html>
